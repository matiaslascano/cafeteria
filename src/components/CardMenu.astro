---
import { cardData } from "../constants";
---

<main class="grid grid-cols-2 gap-4 mx-6">
  {
    cardData.map((card) => (
      <div class="bg-roman rounded-3xl shadow-xl">
        <img alt={card.name} src={card.imageUrl} class=" w-full content-contain rounded-3xl" />
        <h3 class="text-white text-lg font-bold m-2">{card.name}</h3>
        <div class="flex justify-between items-center mx-2 pb-2">
            <p class="text-white font-bold">${card.price}</p>
            <button class="bg-sepia rounded-xl p-2 mt-2 font-bold text-white px-4">Ordena</button>
        </div>
      </div>
    ))
  }
</main>
