---
import { todosLosProductos } from "../data";
---

<h2 class="m-6 text-4xl font-extrabold">
  Caf√© <span class="border-b-4 border-red-500">Frio</span>
</h2>
<div class="flex flex-col items-center md:grid md:grid-cols-3">
  {
    todosLosProductos.map((product) =>
      product.categoria === "Cafe Caliente" ? (
        <div class="flex flex-col items-left mt-6 mx-6 bg-hero rounded-3xl p-6 w-4/5 shadow-xl shadow-black/50 md:max-h-[400px]">
          <img
            src={product.imageUrl}
            alt={product.nombre}
            width={80}
            height={80}
            class="w-full md:max-h-[100px] md:object-cover mb-2 rounded-xl shadow-xl shadow-black/50"
          />
          <h2 class="my-2 text-2xl text-brown/65 font-bold">
            {product.nombre}
          </h2>
          <p class="text-sepia font-semibold mt-4">
            {product.descripcion.slice(0, 40)}...
          </p>
          <div class="flex justify-between items-center mt-4">
            <p class="text-2xl font-bold text-brown/65">${product.precio}</p>
            <button class="flex bg-brown text-blanco py-2 rounded-full gap-4 w-2/3 items-center justify-center mt-2">
              Ordena
            </button>
          </div>
        </div>
      ) : (
        ""
      )
    )
  }
</div>
