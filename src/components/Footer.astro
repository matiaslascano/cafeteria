---
import { Image } from "astro:assets";
import logo from "../assets/CoffeeLove.svg";
---

<footer class="my-6">
  <div class="flex items-center border-b-2 border-gray-100 m-2 pb-4">
    <Image src={logo} alt="logo" width={80} height={80} />
    <p class="text-brown font-bold text-3xl">CofeeLove</p>
  </div>
  <ul class="m-6 gap-4 flex flex-col">
    <li class="text-sepia font-bold text-xl">HOME</li>
    <li class="text-sepia font-bold text-xl">MENU</li>
    <li class="text-sepia font-bold text-xl">DELIVERY</li>
    <li class="text-sepia font-bold text-xl">SUCURSALES</li>
  </ul>
  <div class="w-full">
    <p class="font-bold text-2xl px-6 mb-2">Newsletter</p>
    <div class="flex px-6 w-full">
      <input type="email" placeholder="Ingresa tu correo" class="h-10 border-2 border-sepia w-2/3" />
      <button class="w-1/3 bg-sepia text-white">Suscribete</button>
    </div>
  </div>
</footer>
